{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "@typescript-eslint/explicit-function-return-type": ["error", {}],
    "@typescript-eslint/no-explicit-any": "error", // 暗黙の any 型を禁止
    "@typescript-eslint/typedef": [
      "error",
      {
        "arrayDestructuring": true, // 配列の分割代入に型を要求
        "arrowParameter": true, // アロー関数のパラメータに型を要求
        "memberVariableDeclaration": true, // クラスのメンバー変数に型を要求
        "objectDestructuring": true, // オブジェクトの分割代入に型を要求
        "parameter": true, // 関数のパラメータに型を要求
        "propertyDeclaration": true, // プロパティ宣言に型を要求
        "variableDeclaration": true, // 変数宣言に型を要求
        "variableDeclarationIgnoreFunction": false // 関数型の変数にも型を要求
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/typedef": "off"
      }
    }
  ]
}
